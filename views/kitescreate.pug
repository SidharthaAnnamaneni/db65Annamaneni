        label.kitesAttr(for='name') kites name
        input#kites_type(type='text', name='name')
    div.form-group
        label.kitesAttr(for='color') kites color
        input#size(type='text', name='color')
    div.form-group
        label.kitesAttr(for='cost') kites cost
        input#cost(type='number', name='cost')
    input(type="submit")
